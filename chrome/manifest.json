{
   "name": "hoppy",
   "version": "0.2.1",
   "manifest_version": 2,
   "background": {
      "scripts": ["common.js", "jquery.min.js", "config.js", "ajax.js", "background.js", "js/chrono.min.js", "menu.js", "js/moment.js"]
   },
   "browser_action": {
      "default_icon": "mystuff_icon_19.png",
      "default_popup": "popup.html",
      "default_title": "Hoppy"
   },
   "description": "hoppy is an app which helps collect, manage, share web elements liked by you",
   "icons": {
      "128": "mystuff_icon_128.png",
      "16": "mystuff_icon_16.png",
      "48": "mystuff_icon_48.png"
   },

   "content_scripts": [{ 
       "css":["css/jquery.datetimepicker.css", "css/modal.css"],
       "js": ["jquery.min.js", "config.js", "js/eventPopup.js", "js/jquery.datetimepicker.js", "js/bootstrap.min.js"],
       "matches": [ "http://*/*", "https://*/*" , "file:///*"],
       "run_at": "document_end"
   },{
       "matches": [ "http://*/*", "https://*/*" ], 
       "js": ["menu.js"]
   }],

   "options_page": "options.html",
   "permissions": [ "tabs", "http://*/*", "https://*/*", "cookies", "notifications", "contextMenus" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "message": "added blink"
}
